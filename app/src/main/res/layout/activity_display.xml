<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display"
    android:background="@drawable/app9">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Art Display"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/txt_nname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:paddingTop="10dp"
        android:text="Name:"
        android:textColor="@color/colorAccent"
        android:textSize="10pt"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/ed_name"
        android:paddingTop="10dp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/txt_nname"
        android:hint="Enter your name here"
        android:textColor="@color/colorBright" />
    <TextView
        android:id="@+id/style_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nname"
        android:paddingTop="10dp"
        android:text="Style:"
        android:textColor="@color/colorAccent"
        android:textSize="10pt"
        android:layout_margin="10dp"/>

    <EditText
        android:paddingTop="10dp"
        android:id="@+id/ed_style"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ed_name"
        android:layout_toRightOf="@+id/txt_nname"
        android:hint="Input your style of art"
        android:textColor="@color/colorBright" />
    <TextView
        android:id="@+id/discribe_txt"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/style_txt"
        android:paddingTop="10dp"
        android:text="Description:"
        android:textColor="@color/colorAccent"
        android:textSize="10pt"
        android:layout_margin="10dp"/>

    <EditText
        android:paddingTop="10dp"
        android:id="@+id/ed_discribe"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ed_style"
        android:layout_toRightOf="@+id/discribe_txt"
        android:hint="Describe the kind of art."
        android:textColor="@color/colorBright"
        android:inputType="textLongMessage"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>